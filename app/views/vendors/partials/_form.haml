= form_for @vendor, html: {class: "ui form"} do |f|
  - if @vendor.errors.any?
    #error_explanation
      %h2
        = pluralize(@vendor.errors.count, "error")
        prohibited this vendor from being saved:
      %ul
        - @vendor.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    .ui.buttons
      = f.button :submit, :class => "ui positive sa add button" do
        Create
      .or
      = link_to 'Cancel', vendors_path, class: "button ui button"
